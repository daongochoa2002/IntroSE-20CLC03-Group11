<body>
    <%- include('../partials/header') %>
    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Prescription</h2>
            </div>
        </div>
        <h3>Total account patient: <%= patients.length %></h3>
        <table>
            <thead>
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Date of birth</th>
                    <th>Gender</th>
                    <th>Phone number</th>
                    <th>User ID in hospital</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% patients.forEach(patient => { %>
                    <tr>
                        <td><%= patient.firstName%></td>
                        <td><%= patient.lastName %></td>
                        <td><%= patient.email %></td>
                        <td><%= patient.dateOfBirth %></td>
                        <td><%= patient.gender %></td>
                        <td><%= patient.phoneNumber %></td>
                        <td><%= patient.userIdInHospital %></td>
                        <td>
                            <form action="/prescription/add/<%= patient._id %>" method="GET">
                                <button type="submit" class="btn btn-primary">Prescribe</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>


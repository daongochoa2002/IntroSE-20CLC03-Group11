                <h2>Create account for Patient</h2>
                <form class="form-horizontal" role="form" method="post">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="firstName_patient" class="control-label">First Name</label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" id="firstName_patient" placeholder="First Name" class="form-control" autofocus name="firstName_patient" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="lastName_patient" class="control-label">Last Name</label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" id="lastName_patient" placeholder="Last Name" class="form-control" autofocus name="lastName_patient" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="email_patient" class="control-label">Email</label>
                            </div>
                            <div class="col-sm-9">
                                <input type="email" id="email_patient" placeholder="Email" class="form-control" name="email_patient" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="password_patient" class="control-label">Password</label>
                            </div>
                            <div class="col-sm-9">
                                <input type="password" id="password_patient" placeholder="Password" class="form-control" name="password_patient" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="birthDate_patient" class="control-label">Date of Birth</label>
                            </div>
                            <div class="col-sm-9">
                                <input type="date" id="birthDate_patient" class="form-control" name="dateOfBirth_patient">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="phoneNumber_patient" class="control-label">Phone number </label>
                            </div>
                            <div class="col-sm-9">
                                <input type="phoneNumber_patient" id="phoneNumber" placeholder="Phone number" class="form-control" name="phoneNumber_patient">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="userIdInHospital_patient" class="control-label">User ID in Hospital</label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" id="userIdInHospital_patient" placeholder="User ID" class="form-control" name="userIdInHospital_patient">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="control-label">Gender</label>
                            </div>
                            <div class="col-sm-9">
                                <div class="row">
                                    <div class="col-sm-5">
                                        <label class="radio-inline">
                                            <input type="radio" id="femaleRadio" value="Female" name="gender" required>Female
                                        </label>
                                    </div>
                                    <div class="col-sm-5">
                                        <label class="radio-inline">
                                            <input type="radio" id="maleRadio" value="Male" name="gender">Male
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">
                        <button type="submit" class="signupbtn">Add account</button>
                    </div>

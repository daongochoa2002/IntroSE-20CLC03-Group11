    <div class="container">
        <h2>Edit Medicine</h2>
        <table width="1000px">
            <thead>
                <tr>
                    <th>Name medicine</th>
                    <th>Condition</th>
                    <th>Review</th>
                    <th>Date</th>
                    <th>Slug</th>
                    <th>SanitizedHtml</th>
                    <th><a href="/edit_medicine"><i class="bi bi-pencil-square" style="size: 2rem"></i></a>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% medicine.forEach(drug => { %>
                    <tr>
                        <td rowspan="<%= drug.length %>"><%= drug.name%></td>
                        <td rowspan="<%= drug.length %>"><%= drug.condition %></td>
                        <td rowspan="<%= drug.length %>"><%= drug.review %></td>
                        <td rowspan="<%= drug.length %>"><%= drug.date %></td>
                        <td rowspan="<%= drug.length %>"><%= drug.slug %></td>
                        <td rowspan="<%= drug.length %>"><%= drug.sanitizedHtml %></td>
                        <td rowspan="<%= drug.length %>"><a href="/edit_medicine"><i class="bi bi-pencil-square" style="size: 2rem"></i></a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

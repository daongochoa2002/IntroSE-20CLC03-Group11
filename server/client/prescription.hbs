<div class="container">
    <div class="card-header">
        <h2>PRESCRIPTIONS</h2>
        <table width="1000px">
            <thead>
            <tr>
                <th>Create date</th>
                <th>Doctor's name</th>
                <th>Patient's name</th>
                <th>Note</th>
                <th>Drugs</th>
                <th>Dosage</th>
            </tr>
            </thead>
            <tbody id="data-output">
            <!-- Prodcuts from javascript file in here. -->
            </tbody>
        </table>

        <script>
            fetch("/config/prescription.json")
                    .then(function(response){
                        return response.json();
                    })
                    .then(function(prescription){
                        let placeholder = document.querySelector("#data-output");
                        let out = "";
                        for(let drugs = 0; drugs < prescription.length; drugs++){
                            out += `
                                <tr>
                                    <td>${prescription[drugs].createDate}</td>
                                    <td>${prescription[drugs].doctorName}</td>
                                    <td>${prescription[drugs].patientName}</td>
                                    <td>${prescription[drugs].note}</td>
                                    <td>${prescription[drugs].listDrug[0].drug}</td>
                                    <td>${prescription[drugs].listDrug[1].dosage}</td>
                                </tr>
                            `;
                        }

                        placeholder.innerHTML = out;
                    });
        </script>
    </div>

